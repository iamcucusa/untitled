{
  "name": "monorepo-untitled",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "check:all": "pnpm run check:install && pnpm run check:tokens && pnpm run check:build && pnpm run check:type",
    "check:build": "pnpm -C apps/web-react build",
    "check:dev": "pnpm -C apps/web-react dev",
    "check:install": "pnpm install",
    "check:tokens": "pnpm -C packages/tokens build",
    "check:type": "pnpm -C apps/web-react exec tsc --noEmit",
    "dev": "pnpm -C apps/web-react dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss,html,json,md,yml,yaml,graphql,vue}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,scss,html,json,md,yml,yaml,graphql,vue}\"",
    "postinstall": "pnpm -C packages/tokens build",
    "lint": "echo 'add your linter setup'",
    "typecheck": "echo 'add ts typecheck jobs'",
    "a11y:lh": "pnpm -C apps/web-react build && pnpm dlx @lhci/cli@0.13.0 autorun --config=.lighthouserc.json",
    "a11y:axe": "playwright test -c apps/web-react/tests/playwright.config.ts",
    "a11y:rm": "playwright test -c apps/web-react/tests/playwright.config.ts apps/web-react/tests/a11y/reduced-motion.spec.ts",
    "a11y:all": "pnpm run a11y:lh && pnpm run a11y:axe && pnpm run a11y:rm"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@lhci/cli": "0.13.0",
    "@playwright/test": "^1.55.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.0.0"
}
