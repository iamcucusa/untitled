{
  "name": "monorepo-untitled",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "pnpm -C packages/tokens build",
    "clean": "rimraf **/dist",
    "clean:tokens": "rimraf packages/tokens/dist",
    "clean:apps": "rimraf apps/web-react/dist",
    "clean:libs": "rimraf packages/intl-core/dist",
    "build": "pnpm -r run build",
    "build:libs": "pnpm -r --filter ./packages/intl-core run build",
    "build:apps": "pnpm -r --filter ./apps/web-react run build",
    "rebuild": "pnpm run clean && pnpm run build",
    "dev:web": "pnpm --filter ./apps/web-react dev",
    "dev": "pnpm build:libs && pnpm dev:web",
    "dev:watch": "concurrently -k -n libs,app -c auto \"/bin/sh -lc 'pnpm -r --filter ./packages/intl-core run build:watch'\" \"/bin/sh -lc 'pnpm --filter ./apps/web-react dev'\"",
    "check:install": "pnpm install",
    "check:tokens": "pnpm -C packages/tokens build",
    "check:build": "pnpm -C apps/web-react build",
    "check:type": "pnpm -C apps/web-react exec tsc --noEmit",
    "check": "pnpm run check:install && pnpm run check:tokens && pnpm run check:build && pnpm run check:type",
    "lint": "eslint apps/web-react/src --ext .ts,.tsx",
    "lint:fix": "eslint apps/web-react/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,css,scss,html,json,md,yml,yaml,graphql,vue}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,css,scss,html,json,md,yml,yaml,graphql,vue}\"",
    "typecheck": "pnpm -C apps/web-react exec tsc --noEmit",
    "a11y:lh": "pnpm -C apps/web-react build && pnpm dlx @lhci/cli@0.13.0 autorun --config=.lighthouserc.json",
    "a11y:axe": "playwright test -c apps/web-react/tests/playwright.config.ts",
    "a11y:rm": "playwright test -c apps/web-react/tests/playwright.config.ts apps/web-react/tests/a11y/reduced-motion.spec.ts",
    "a11y": "pnpm run a11y:lh && pnpm run a11y:axe && pnpm run a11y:rm"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@lhci/cli": "0.13.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.34.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.41.0",
    "concurrently": "^9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
